{% extends "layout.njk" %}
    
{% block content %}
  <section class="banner">
    <div class="container">
      <div class="banner__container">
        <div class="banner__content">
          <h1 class="banner__title">As melhores receitas</h1>
          <p class="banner__text">Aprenda a construir os melhores pratos com receitas criadas por profissionais do mundo inteiro.</p>
        </div>
        <div class="banner__container-img">
          <img class="banner__image" src="/assets/chef.png" alt="Chefe" />
        </div>
      </div>
    </div>
  </section>

  <section class="recipes">
    <div class="container">
      <h3 class="recipes__title">Mais acessadas</h3>
      <div class="recipes__container">
        {% for recipe in recipes %}
          <div class="recipes__item recipes__item--click">
            <div class="recipes__container-img">
              <img class="recipes__image" src="{{recipe.image}}" alt="{{recipe.title}}"/>
            </div>
            <h2 class="recipes__name">{{recipe.title}}</h2>
            <p class="recipes__author">por {{recipe.author}}</p>
          </div>
        {% endfor %}
      </div>
    </div>
  </section>

  <script src="/index.js"></script>
{% endblock %}